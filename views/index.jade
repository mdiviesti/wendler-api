extends template

block content
    div.row.main-content
        div.large-12.columns
            p= 'Please enter the weight of your 1RM'
            div
                form(action='/weight',method='post')
                    label(for='squats') squats
                    input(id='squats',type='text',placeholder='lbs',name='squats')
                    label(for='bench') Bench Press
                    input(id='bench',type='text',placeholder='lbs',name='bench')
                    label(for='deadlift') Dead Lift
                    input(id='deadlift',type='text',placeholder='lbs',name='deadlift')
                    label(for='milpress') Military Press
                    input(id='milpress',type='text',placeholder='lbs',name='milpress')
                    input(type='submit',value='submit',data-transition='fade', data-theme='c')